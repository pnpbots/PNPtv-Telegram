# ===========================================
# PNP Television Bot - Environment Variables
# ===========================================

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=123456789,987654321

# Payment Configuration (Bold.co)
BOLD_IDENTITY_KEY=your_bold_identity_key_here
BOLD_WEBHOOK_SECRET=your_bold_webhook_secret_here

# Database Configuration (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Customer Service
CUSTOMER_SERVICE_CHAT_ID=your_support_chat_id_here

# Webhook Configuration (Railway provides PORT automatically)
WEBHOOK_URL=https://your-railway-app.railway.app/webhook
PORT=8000

# Admin Panel Configuration
ADMIN_PORT=8080
ADMIN_HOST=0.0.0.0

# Bot Settings
REMINDER_DAYS_BEFORE_EXPIRY=3
ENVIRONMENT=production
LOG_LEVEL=INFO

# Optional Security
PYTHONUNBUFFERED=1
PYTHONPATH=.

